FROM node:latest AS build
COPY . /app
WORKDIR /app
# --verbose f√∂r mer detaljerad utskrift
RUN npm install --verbose
# Bygg frontend
RUN npm run build

FROM nginx:latest
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
